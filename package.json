{
  "name": "sitedown",
  "description": "Generate a static HTML site from a collection of markdown files.",
  "version": "2.2.0",
  "author": "Nate Goldman <ungoldman@gmail.com>",
  "bin": {
    "sitedown": "./bin.js"
  },
  "bugs": {
    "url": "https://github.com/ungoldman/sitedown/issues"
  },
  "dependencies": {
    "cheerio": "^0.20.0",
    "cliclopts": "^1.1.1",
    "cwp": "^1.0.0",
    "event-stream": "^3.3.1",
    "gaze": "^1.1.1",
    "markdown-it": "^4.3.0",
    "markdown-it-highlightjs": "^2.0.0",
    "minimist": "^1.1.1",
    "mkdirp": "^0.5.1",
    "readdirp": "^1.3.0"
  },
  "devDependencies": {
    "gh-pages": "^0.11.0",
    "live-server": "^1.1.0",
    "npm-run-all": "^3.1.0",
    "rimraf": "^2.4.2",
    "snazzy": "^5.0.0",
    "standard": "^8.0.0",
    "style.css": "^1.0.0-alpha-1",
    "tap-spec": "^4.0.2",
    "tape": "^4.0.0"
  },
  "homepage": "https://github.com/ungoldman/sitedown",
  "keywords": [
    "generator",
    "markdown",
    "site",
    "static",
    "website"
  ],
  "license": "ISC",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ungoldman/sitedown.git"
  },
  "scripts": {
    "gh-pages": "run-s site:* && gh-pages -d site",
    "site:clean": "rm -rf site",
    "site:html": "./bin.js . -b site -l docs/layout.html",
    "site:style": "cp node_modules/style.css/style.css site/style.css",
    "serve": "run-s site:* && live-server site",
    "pretest": "standard | snazzy",
    "test": "tape test/*.js | tap-spec"
  }
}
